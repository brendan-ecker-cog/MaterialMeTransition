<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="example_transition"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DetailsportsImage"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/Detailtitle"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/title_placeholder"
        android:layout_alignBottom="@+id/DetailsportsImage"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <TextView
        android:id="@+id/DetailnewsTitle"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/news_placeholder"
        android:layout_below="@+id/DetailsportsImage"
        android:textColor="?android:textColorSecondary"/>

    <TextView
        android:id="@+id/DetailsubTitle"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/placeholder"
        android:layout_below="@+id/DetailnewsTitle"/>

</RelativeLayout>
</ScrollView>